{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "modulePaths": ["<rootDir>"],
  "testEnvironment": "node",
  "testRegex": "test/.*\\.service\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^test/(.*)$": "<rootDir>/test/$1"
  },
  "setupFiles": ["dotenv/config"],
  "verbose": true,
  "collectCoverageFrom": [
    "src/module/**/*.service.ts"
  ],
  "coverageDirectory": "<rootDir>/coverage"
}